<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/item_details_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:id="@+id/details_container_card_view"
        android:layout_marginTop="3dp"
        android:backgroundTint="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:layout_gravity="center"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="5dp">


            <RelativeLayout
                android:id="@+id/page_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/container_details_work_order_title"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/label_work_order_title"
                        android:text="Work order title"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/field_details_work_order_title"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="18dp"
                        android:layout_below="@id/label_work_order_title"
                        android:text="Title of the work order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/container_details_work_order_number"
                    android:layout_below="@id/container_details_work_order_title"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/label_work_order_number"
                        android:text="Work order number"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/field_details_work_order_number"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="18dp"
                        android:layout_below="@id/label_work_order_number"
                        android:text="WO #445566"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/container_details_customer_name"
                    android:layout_below="@id/container_details_work_order_number"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/label_customer_name"
                        android:text="Customer Name"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/field_details_customer_name"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="18dp"
                        android:layout_below="@id/label_customer_name"
                        android:text="John Doe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/container_details_customer_address"
                    android:layout_below="@id/container_details_customer_name"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/label_customer_address"
                        android:text="Customer Address"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/field_details_customer_address"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="18dp"
                        android:lines="4"
                        android:layout_below="@id/label_customer_address"
                        android:text="Address of the customer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/container_details_work_order_description"
                    android:layout_below="@id/container_details_customer_address"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/label_work_order_description"
                        android:text="Work order description"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/field_details_work_order_description"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="18dp"
                        android:layout_below="@id/label_work_order_description"
                        android:lines="4"
                        android:text="Some sort of multiline work order description goes here."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/container_details_images"
                    android:layout_below="@id/container_details_work_order_description"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/label_details_images"
                        android:text="Images"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:scrollbars="horizontal"
                        android:id="@+id/details_item_recycler_view"
                        android:layout_below="@id/label_details_images"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>

                </RelativeLayout>

            </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>